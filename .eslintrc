{
    "rules": {
        "indent": [ 2, 2 ],
        "linebreak-style": [ 2, "unix" ],
        "semi": [ 2, "always" ],
        "no-console": 1,
        "no-multi-spaces": 2,
        "no-trailing-spaces": 2,
        "space-after-keywords": [2, "always"]
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "commonjs": true
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "jsx": true,
        "modules": true,
        "experimentalObjectRestSpread": true
    },
    "plugins": [
        "react"
    ]
}
